{
    "name": "Download Sorter",
    "description": "Categorize or rename downloads based on their file type",
    "homepage_url": "https://github.com/liliantdn/download-sorter",
    "manifest_version": 2,
    "version": "0.1",

    "applications": {
        "gecko": {
            "strict_min_version": "55.0a1",
            "id": "download-sorter@liliantdn.github.com",
            "update_url": "https://mdejean.github.io/download-renamer/update.json"
        }
    },

    "permissions": [
        "downloads",
        "storage"
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "prefs.html",
        "browser_style": true
    }
}
